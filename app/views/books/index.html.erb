<h1>Books</h1>

<table>
    <tr>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
        <tr>
        <td class="book-title"><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td class="book-show"><%= link_to 'show', book_path(book) %></td>
        <td class="book-edit"><%= link_to 'edit', edit_book_path(book) %></td>
        <td class="book-destroy"><%= link_to 'destroy', book_path(book), method: :delete %></td>
        </tr>
    <% end %>

</table>


<h2>New Book</h2>

<% if @book.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: 'book-title' %>
  </div>
  <div class="field">
  <%= f.label :body, "Body" %>
    <%= f.text_area :body, class:'book-body' %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>