
                    <h2 class="form-header-title">Sign up</h2>
                    <div class="form-body">
                    
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="input-field">
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <div class="field">
                          <label for="inputName">Name</label>
                          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
                          </div>
                          <div class="field">
                          <label for="inputEmail">Email</label>
                          <%= f.email_field :email, id:"inputEmail", placeholder:"メールアドレス", class:"form-control" %>
                          </div>

                          <div class="field">
                          <label for="inputPassword">Password<br />(6 characters minimum)</label>
                          <%= f.password_field :password, autocomplete: "off", id:"inputPassword", placeholder:"パスワード", class:"form-control" %>
                          </div>

                          <div class="field">
                          <label or="inputConfirmPassword">Password</label>
                          <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword", placeholder:"パスワード確認", class:"form-control" %>
                          </div>
                          </div>
                        <div class="submit-button">
                        <%= f.submit "Sign up", class: "btn btn-success" %>
                        </div>
                      <% end %>

                      <%= render "devise/shared/links" %>
                      </div>